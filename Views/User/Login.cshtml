
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<body>
    @{ Html.BeginForm("Login", "User");}

    @Html.Label("email:")<br>
    @Html.TextBox("email")<br>

    @Html.Label("password:")<br>
    @Html.TextBox("password")<br>

    <input type="submit" value="Submit">
    @{ Html.EndForm();}
</body>


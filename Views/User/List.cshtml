
@{
    ViewBag.Title = "List";
}
<head runat="server">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
    </script>
</head>
<body>
    <h2>List</h2>
    <table class="content-wrapper">
        <tr>
            <th>
                @Html.DisplayName("Last Name")
            </th>
            <th>
                Read
            </th>
            <th>
                Insert
            </th>
            <th>
                Update
            </th>
            <th>
                Delete
            </th>
        </tr>
        @foreach (var user in ViewBag.userList)
        {
            <tr>
                <td>@user.firstName</td>
                <td>@Html.ActionLink("Read", "Read", "User", new { id = @user.id }, null)</td>
                <td>@Html.ActionLink("Insert", "Store", "User")</td>
                <td>@Html.ActionLink("Update", "Update", "User", new { id = @user.id }, null)</td>
                <td>
                    @Ajax.ActionLink("Delete", "Delete", "User", new { id = @user.id },new AjaxOptions { HttpMethod = "Delete" })
                </td>
            </tr>
        }
    </table>
</body>



